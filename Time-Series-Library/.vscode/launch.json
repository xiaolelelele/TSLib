{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: M4超参数优化",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "--task_name", "short_term_forecast",
                "--is_training", "1",
                "--use_optim", "True",
                "--optim_method", "bayesian",
                "--n_trials", "20",
                "--optim_params", "train_epochs,batch_size,alpha",
                "--root_path", "./dataset/m4",
                "--seasonal_patterns", "Yearly",
                "--model_id", "m4_Yearly_Opt_Bayesian",
                "--model", "Transformer",  // 替换实际模型名
                "--data", "m4",
                "--features", "M",
                "--e_layers", "2",
                "--d_layers", "1",
                "--factor", "3",
                "--enc_in", "1",
                "--dec_in", "1",
                "--c_out", "1",
                "--batch_size", "16",
                "--d_model", "16",
                "--d_ff", "32",
                "--top_k", "5",
                "--des", "Optimized Bayesian Exp",
                "--itr", "1",
                "--learning_rate", "0.001",
                "--loss", "AlphaMixLoss"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}", // 关键：设置工作目录为项目根目录
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: LSTM Weather Classification",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "args": [
                "--task_name", "classification",
                "--is_training", "1",
                "--root_path", "./dataset/weather/",
                "--model_id", "weather_debug",
                "--model", "lstm",
                "--data", "weather_trend",
                "--e_layers", "3",        // LSTM层数减少
                "--batch_size", "64",       // 批大小减小
                "--d_model", "256",          // 隐藏层维度减小
                "--d_ff", "128",            // FFN维度减小
                "--top_k", "1",             // 稀疏注意力参数降低
                "--des", "Debug",
                "--itr", "1",
                "--learning_rate", "0.001",
                "--train_epochs", "3",      // 训练轮次减少
                "--patience", "2",           // 早停耐心值降低
                "--use_norm", "0",         
            ]
        },
        {
            "name": "Python: Crossformer Debug",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "args": [
                "--task_name", "classification",
                "--is_training", "1",
                "--root_path", "./dataset/weather/",
                "--model_id", "weather_debug",
                "--model", "Crossformer_muti_classify",
                "--data", "weather_trend",
                "--e_layers", "1",
                "--batch_size", "4",
                "--d_model", "64",
                "--d_ff", "128",
                "--top_k", "1",
                "--des", "'Debug'",
                "--itr", "1",
                "--learning_rate", "0.001",
                "--train_epochs", "3",
                "--patience", "2"
            ]
        },
        {
            "name": "Python: Debug classify_forecast",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "args": [
                "--task_name", "classify_forecast",
                "--is_training", "1",
                "--root_path", "./dataset/weather/",
                "--data_path", "weather.csv",
                "--model_id", "weather_96_96",
                "--model", "TrendMagnitudePredictor",
                "--data", "custom_cla_fore",
                "--features", "M",
                "--seq_len", "96",
                "--label_len", "48",
                "--pred_len", "96",
                "--e_layers", "2",
                "--d_layers", "1",
                "--factor", "3",
                "--enc_in", "22",
                "--dec_in", "22",
                "--c_out", "22",
                "--d_model", "32",
                "--d_ff", "32",
                "--top_k", "5",
                "--des", "Exp",
                "--itr", "1",
                "--use_norm", "1",   // 是否使用归一化
    ]
}
    ]
}